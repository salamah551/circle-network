# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:5000
NEXT_PUBLIC_LAUNCH_DATE=2025-11-10T00:00:00Z

# Pricing Caps
NEXT_PUBLIC_FOUNDERS_CAP=50
NEXT_PUBLIC_FOUNDING_PRICE=2497
NEXT_PUBLIC_PREMIUM_PRICE=4997
NEXT_PUBLIC_ELITE_PRICE=9997

# Email (SendGrid or Resend)
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=invite@thecirclenetwork.org
SENDGRID_FROM_NAME=Circle Network
SENDGRID_REPLY_TO_EMAIL=invite@thecirclenetwork.org
# Optional: SendGrid webhook signature verification (recommended for production)
SENDGRID_EVENT_PUBLIC_KEY=your-sendgrid-event-public-key
# RESEND_API_KEY=your-resend-key

# Invite Campaign Settings
CAMPAIGN_ENABLE_INTRO_PLAINTEXT=false
INVITES_FROM_EMAIL=invites@thecirclenetwork.org
INVITES_FROM_NAME=The Circle Network

# Stripe (optional)
# IMPORTANT: Use TEST keys (sk_test_...) during development/testing
# Only use LIVE keys (sk_live_...) in production after thorough testing
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PRICE_ID=price_...

# PostHog Analytics (optional)
# PostHog keys start with 'phc_' prefix
# If not configured, analytics will gracefully no-op without errors
NEXT_PUBLIC_POSTHOG_KEY=phc_your_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Cron/Admin
# IMPORTANT: Set a strong random secret for cron job authentication
# Example: openssl rand -base64 32
CRON_SECRET=your-random-secret-for-cron-jobs
