# Supabase
# Public URL and anon key (exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Server-only credentials (NEVER expose to browser)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:5000
NEXT_PUBLIC_LAUNCH_DATE=2025-11-10T00:00:00Z

# Pricing Configuration
NEXT_PUBLIC_FOUNDERS_CAP=50
# Set to 'false' to hide Charter urgency badge
NEXT_PUBLIC_SHOW_CHARTER_URGENCY=true

# Stripe
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY

# Stripe Price IDs for membership tiers
# Standardized pricing strategy:
# - Professional: $199/month (5 BriefPoint/day, 10 ARC/month, 1 Intro/week)
# - Pro: $299/month (10 BriefPoint/day, 30 ARC/month, 3 Intros/week, Slack delivery)
# - Elite: $499/month (25 BriefPoint/day, 100 ARC/month, 5+ Intros/week, Deep Dive)
# - Founding: Pro tier at $219/month for 24 months (special offer)
NEXT_PUBLIC_STRIPE_PRICE_PROFESSIONAL=price_...
NEXT_PUBLIC_STRIPE_PRICE_PRO=price_...
NEXT_PUBLIC_STRIPE_PRICE_ELITE=price_...
NEXT_PUBLIC_STRIPE_PRICE_FOUNDING=price_...

# Legacy price IDs (deprecated - for backwards compatibility only)
# NEXT_PUBLIC_STRIPE_PRICE_PREMIUM=price_...

# PostHog Analytics (optional)
# PostHog keys start with 'phc_' prefix
# If not configured, analytics will gracefully no-op without errors
NEXT_PUBLIC_POSTHOG_KEY=phc_your_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Cron/Admin
CRON_SECRET=your-random-secret-for-cron-jobs

# Funnel Integration URLs
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-username/consultation
# OR use Cal.com instead:
# NEXT_PUBLIC_CALCOM_URL=https://cal.com/your-username/consultation
NEXT_PUBLIC_THREAT_SCAN_TALLY_URL=https://tally.so/r/your-form-id
NEXT_PUBLIC_SITE_URL=http://localhost:5000

# ARC Usage Limits (requests per month by tier)
# Founding: 100, Elite: 50, Charter: 10, Professional: 5
ARC_LIMIT_FOUNDING=100
ARC_LIMIT_ELITE=50
ARC_LIMIT_CHARTER=10
ARC_LIMIT_PROFESSIONAL=5

# ARC Storage
ARC_STORAGE_BUCKET=arc-uploads
ARC_MAX_FILE_SIZE_MB=20

# AI Ops Control Plane
OPS_API_TOKEN=your-secret-token-for-ops-api
OPS_EMBEDDINGS_PROVIDER=openai
OPS_EMBEDDINGS_MODEL=text-embedding-3-large
OPS_CHAT_MODEL=gpt-4-turbo-preview
OPS_MAX_CHUNK_SIZE=8000
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY
OPS_ALLOW_DIRECT_APPLY=false

# BriefPoint - Google Calendar Integration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub (for AI Ops PR creation)
GITHUB_TOKEN=ghp_YOUR_GITHUB_TOKEN
GITHUB_REPO_OWNER=your-org-or-username
GITHUB_REPO_NAME=circle-network

# Slack (for AI Ops approval workflow - optional)
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-YOUR_SLACK_BOT_TOKEN
SLACK_OPS_CHANNEL_ID=C01234567
